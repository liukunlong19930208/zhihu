.swiper{
    height:400rpx;
}
.swiper .s-item{
    height:400rpx;
}
.news-list{
    padding:30rpx;
    box-sizing:border-box;
}
.news-list .n-item{
     width:100%;
     height:160rpx;
     padding:30rpx;
     box-sizing:border-box;
     position:relative;
     margin-bottom:20rpx;
     border-bottom:1rpx solid #ccc;
}
.news-list .n-item .n-title{
      width:70%;
      box-sizing:border-box;
      font-size:35rpx;
}
.news-list .n-item .n-image{
      position:absolute;
      width:20%;
      height:80%;
      box-sizing: border-box;
      right:30rpx;
      bottom:16rpx;

}
.zhe{
    width:100%;
    position:fixed;
    top:0;
    bottom:0;
    margin:auto;
    z-index:100;
    background:rgba(0,0,0,0.8);
    transform:translate3d(-100%,0,0);
    transition:transform .8s ease-out;
}
.themes{
    width:180px;
    position: fixed;
    top:0;
    bottom:0;
    margin: auto;
    background:goldenrod;
    z-index:100;
    box-sizing: border-box;
    padding:40rpx;
    box-sizing:border-box;
   
}
.themes .t-themes{
    padding:25rpx;
    border-bottom:1px solid #000;
}
.active{
      transform:translate3d(0,0,0);
}
.button{
    width:100rpx;
    height:100rpx;
    border-radius:50%;
    position:fixed;
    bottom:40rpx;
    right:20rpx;
    background:goldenrod;
    z-index:100;
    line-height: 100rpx;
    text-align: center;
    color:red;
}
.start-image{
    position:fixed;
    top:0;
    bottom:0;
    left:0;
    right:0;
    margin:auto;
    z-index:1000;
    background-color: #000;
    background-size: cover;
}